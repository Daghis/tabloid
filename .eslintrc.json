{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 4],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "never"],
    "no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }],
    "no-console": "off"
  },
  "overrides": [
    {
      "files": ["static/js/*.js"],
      "env": {
        "browser": true,
        "node": false
      }
    },
    {
      "files": ["tabloid-repl.js", "test/**/*.js"],
      "env": {
        "browser": false,
        "node": true
      }
    }
  ]
}
